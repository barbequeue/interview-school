<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Subject</th>
      <th>Classroom</th>
      <th>Starting at</th>
      <th>Duration</th>
      <th>Students enrolled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.teacher_first_name %> <%= section.teacher_last_name %></td>
        <td><%= section.subject_name %></td>
        <td><%= section.classroom_number %></td>
        <td><%= section.starting_at %></td>
        <td><%= section.duration %></td>
        <td><%= section.section_students_count %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

