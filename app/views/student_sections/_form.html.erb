<div id='new-student-section'>
  <%= form_with model: @student_section, url: student_student_sections_path(@student), create_remote: true do |form| %>
    <% if @student_section.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@student_section.errors.count, "error") %> prohibited this student from being saved:</h2>

        <ul>
          <% @student_section.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :section %>
      <%= form.select :section_id, options_from_collection_for_select(Section.all, :id, :id) %>
    </div>

    <%= form.hidden_field :student_id, value: @student.id %>

    <div class="actions">
      <%= form.submit 'Add' %>
    </div>
  <% end %>
</div>
